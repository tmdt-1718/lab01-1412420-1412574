%header#header
	#top-header
		#social.container
			#social-list.col-md-6.col-md-offset-6.col-xs-12
				%a.logo.green-color{:href => "#"}
					%i.fa.fa-facebook{"aria-hidden" => "true"}
				%a.logo.green-color{:href => "#"}
					%i.fa.fa-twitter{"aria-hidden" => "true"}
				%a.logo.green-color{:href => "#"}
					%i.fa.fa-tumblr{"aria-hidden" => "true"}
		#banner
			#logo
				%a{:href => "#"}
					= image_tag 'manu.png', alt: 'logo-img'
	#nav-top
		#nav-top.container
			%nav#nav-custom.navbar.navbar-static-top.navbar-toggleable-md.navbar-default.bg-faded
				.container-fluid
					.navbar-header
						%button.navbar-toggle{"data-target" => "#myNavbar", "data-toggle" => "collapse", :type => "button"}
							%span.icon-bar
							%span.icon-bar
							%span.icon-bar
						%a.navbar-brand{:href => "#"} Â 
					#myNavbar.collapse.navbar-collapse
						%ul.nav.navbar-nav
							%li{:class => "#"}
								= link_to I18n.t('menu.home'), root_path, class: active_menu('home')
							%li{:class => "#"}
								= link_to I18n.t('menu.albums'), albums_path, class: active_menu('albums')
							%li{:class => "#"}
								= link_to I18n.t('menu.blogs'), blogs_path, class: active_menu('blogs')
							%li{:class => "#"}
								= link_to I18n.t('menu.about'), about_index_path, class: active_menu('about')
						%ul#nav-user-info.nav.navbar-nav.navbar-right
							- if user_signed_in?							
								%li{class: 'user-info'}
									= current_user.decorate.user_thumb_avatar class: 'profile-image' 
									= link_to current_user.name, about_index_path(anchor: "#{current_user.name}_#{current_user.id}"), class: 'profile-link'

								%li
									= link_to destroy_user_session_path, method: :delete do
										%i.fa.fa-sign-out{"aria-hidden" => "true"}
